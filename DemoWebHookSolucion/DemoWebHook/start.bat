@echo off
REM ========================================
REM Script de inicio de FileWatcher
REM ========================================

echo.
echo ?????????????????????????????????????????????????????????????
echo ?      FileSystemWatcher - Power Automate Webhook          ?
echo ?????????????????????????????????????????????????????????????
echo.

REM Cambiar al directorio del script
cd /d "%~dp0"

REM Verificar que existe appsettings.json
if not exist "appsettings.json" (
    echo ERROR: No se encontró appsettings.json
    echo Por favor, configure el archivo appsettings.json antes de ejecutar
    pause
    exit /b 1
)

REM Ejecutar la aplicación
echo Iniciando aplicación...
echo.

DemoWebHook.exe %*

REM Si hay error, pausar para ver el mensaje
if errorlevel 1 (
    echo.
    echo La aplicación finalizó con errores
    pause
)
