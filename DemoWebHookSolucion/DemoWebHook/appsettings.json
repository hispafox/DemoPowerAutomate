{
  "Watcher": {
    "Path": "C:\\temp\\watch",
    "IncludeSubdirectories": true,
    "Filter": "*.*",
    "NotifyOnCreated": true,
    "NotifyOnChanged": true,
    "NotifyOnDeleted": true,
    "NotifyOnRenamed": true
  },
  "Webhook": {
    "Url": "https://prod-00.westeurope.logic.azure.com:443/workflows/xxxxx/triggers/manual/paths/invoke?api-version=2016-06-01&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=xxxxxx",
    "Method": "POST",
    "AdditionalHeaders": {
    },
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "RetryBaseDelaySeconds": 5
  },
  "Logging": {
    "Level": "Information",
    "LogToFile": true,
    "LogFilePath": "logs\\watcher.log"
  }
}
